@model Notlarim101.Entity.Category

@{
    ViewBag.Title = "Kategori Ekle";
}
<link href="~/Content/ValidationStyle.css" rel="stylesheet" />
<div class="container">
    <div class="row mt-5 mb-3">
        <div class="col-md-6 offset-md-3">
            <h2>@ViewBag.Title</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 offset-md-3">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()//güvenlik önlemi url de deneme yapılarak admine giriş yapamasın kayıt yapamasın diye

                <div class="form-horizontal">
                    <h4>Category</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group row my-2">
                        @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-3" })
                        <div class="col-md-9">
                            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row my-2">
                        @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-3" })
                        <div class="col-md-9">
                            @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="offset-md-2 col-md-10">
                            <button type="submit" value="Kaydet" class="btn btn-secondary ms-2 float-end" >Kaydet</button>
                        </div>
                            @Html.ActionLink("Back to List", "Index",null,new { @class = "btn btn-outline-secondary float-end" })
                    </div>
                </div>
            }
        </div>
    </div>
</div>
