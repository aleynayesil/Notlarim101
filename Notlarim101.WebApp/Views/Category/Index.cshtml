@using Notlarim101.WebApp
@model IEnumerable<Notlarim101.Entity.Category>

@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-md-10">
        <h2>@ViewBag.Title</h2>
    </div>
</div>
<div class="row">
    <div class="col-md-10">
        @Bootstrap.LinkButton("/Category/Create/", "primary", string.Empty, "Yeni Kayıt", "bi bi-plus-circle","Yeni Kayıt")
        @*<a href="/Category/Create" class="btn btn-primary float-end me-2" title="Yeni Kayıt"><i class="bi bi-plus-circle"></i> Yeni Kayıt</a>*@
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.CreatedOn)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ModifiedOn)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ModifiedUsername)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedOn)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ModifiedOn)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ModifiedUsername)
                    </td>
                    <td class="float-end">
                        @Bootstrap.LinkButton("/Category/Edit/" + item.Id, "warning", "btn-sm", "Güncelle", "bi bi-pencil-fill", string.Empty)
                        |
                        @Bootstrap.LinkButton("/Category/Details/" + item.Id, "info", "btn-sm", "Detay", "bi bi-search", string.Empty)
                        |
                        @Bootstrap.LinkButton("/Category/Delete/" + item.Id, "danger", "btn-sm", "Sil", "bi bi-archive-fill", string.Empty)
                        @*<a href="/Category/Edit/@item.Id" class="btn btn-warning btn-sm" title="Güncelle"><i class="bi bi-pencil-fill"></i></a>*@
                        @*<a href="/Category/Details/@item.Id" class="btn btn-info btn-sm" title="Detay"><i class="bi bi-search"></i></a>
        <a href="/Category/Delete/@item.Id" class="btn btn-danger btn-sm" title="Sil"><i class="bi bi-archive-fill"></i></a>*@

                    </td>
                </tr>
            }

        </table>
    </div>
</div>

