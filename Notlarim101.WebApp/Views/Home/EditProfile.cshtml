@model Notlarim101.Entity.NotlarimUser

@{
    ViewBag.Title = "Profili Düzenle";
}
<link href="~/Content/ValidationStyle.css" rel="stylesheet" />
<div class="container">
    <div class="row">
        <h2>@ViewBag.Title</h2>
        <hr />
    </div>
    <div >
        @using(Html.BeginForm("EditProfile","Home",FormMethod.Post,new { enctype = "multipart/form-data" }))//form metodunu post seçtiğimizde yapılır
            {
            <div class="for-horizontal row">
                <div class="col-md-3">
                    <img src="~/images/@Model.ProfileImageFilename" width="128" height="128" alt="" class="rounded-circle" /><br /><br />
                    <input type="file" id="profileImage" name="profileImage" class="form-control" />
                    <span>&nbsp;</span>@*boş karakter*@
                <span>
                    <i>Lütfen jpg,jpeg ve ya png formatı kullanınız.</i>
                </span>
                </div>
                <div class="col-md-5">
                    @Html.ValidationSummary(false) @*formumda oluşabilecek hataları ve kodda yakalanan hataları yakalar*@
                    @Html.HiddenFor(model => model.Id)
                    <div class="row my-2 ">
                        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "col-form-label col-md-3" })
                        <div class="col-md-9">
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    <div class="row my-2">
                        @Html.LabelFor(model => model.Surname, htmlAttributes: new { @class = "form-label col-md-3" })
                        <div class="col-md-9">
                            @Html.EditorFor(model => model.Surname, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    <div class="row my-2">
                        @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "form-label col-md-3" })
                        <div class="col-md-9">
                            @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    <div class="row my-2">
                        @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "form-label col-md-3" })
                        <div class="col-md-9">
                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", type = "password" } })
                        </div>
                    </div>
                    <div class="row my-2">
                        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "form-label col-md-3" })
                        <div class="col-md-9">
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    <div class="row my-2">
                        <div class=" col-md-12 mt-2">@*offset başından ya da sonundan belli bir boyutu boş bırakır*@
                            <input type="submit" value="Kaydet" class="btn btn-success float-end mx-1" />
                            @Html.ActionLink("Iptal", "ShowProfile", "Home", null, new {@class="btn btn-dark float-end"})
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    &nbsp;
                </div>
            </div>
            }
    </div>
</div>
